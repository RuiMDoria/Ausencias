<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ffff"
    tools:context="com.example.ruido.ausencias.Pedidos.PedidoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:text="Data de Início"
        android:textSize="20sp"
        android:id="@+id/datainiapro"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/datainiapro"
        android:layout_centerHorizontal="true"
        android:text=""
        android:id="@+id/dateStartapro"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/dateStartapro"
        android:text="Data de Fim:"
        android:textSize="20sp"
        android:id="@+id/datafimapro"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/datafimapro"
        android:text=""
        android:id="@+id/dateFinishapro"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/dateFinishapro"
        android:text="Motivo:"
        android:textSize="20sp"
        android:id="@+id/motivoapro"/>

    <TextView
        android:id="@+id/spinnermotivoapro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/motivoapro"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/spinnermotivoapro"
        android:text="Horas:"
        android:textSize="20sp"
        android:id="@+id/horasapro"/>

    <TextView
        android:id="@+id/spinnerhorasapro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/horasapro"

            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/spinnerhorasapro"
        android:text="Observações:"
        android:textSize="20sp"
        android:id="@+id/observaçõesapro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_below="@+id/observaçõesapro"
        android:id="@+id/observaçõestextoapro"/>
    <Button
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:background="#4d4d4d"
        android:textColor="#ffffff"
        android:text="Aceitar"
        android:layout_below="@+id/observaçõestextoapro"
        android:id="@+id/botaoaprova"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/botaoaprova"
        android:layout_marginLeft="21dp"
        android:background="#4d4d4d"
        android:textColor="#ffffff"
        android:text="Recusar"
        android:layout_below="@+id/observaçõestextoapro"
        android:layout_marginTop="15dp"/>

</RelativeLayout>