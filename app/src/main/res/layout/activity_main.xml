<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6ffff"
    tools:context="com.example.ruido.ausencias.MainActivity">

    <ImageView
        android:id="@+id/imagemain"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/menu"
        />

    <Button
        android:id="@+id/botaopedidos"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imagemain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#4d4d4d"
        android:drawableLeft="@drawable/ausencia"
        android:onClick="pedidos"
        android:text="Pedidos"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/inserirAusencia"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#4d4d4d"
        android:drawableLeft="@drawable/registo"
        android:onClick="inserir"
        android:text="Inserir Ausência"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/minhasAusencias"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="#4d4d4d"
        android:drawableLeft="@drawable/ausenciapropria"
        android:onClick="minhasausencias"
        android:text="Todas Ausências"
        android:textColor="#ffffff" />

</RelativeLayout>
